 <ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GA_AirfoilOptimizationTool2D"
    xmlns:MyNamespace="clr-namespace:GA_AirfoilOptimizationTool2D.Chart">

    <Style TargetType="{x:Type MyNamespace:LineChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MyNamespace:LineChart}">
                    <Grid x:Name="MainGrid" Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            
                        </Grid.ColumnDefinitions>

                        <Canvas x:Name="ChartWindow">
                            <Polyline x:Name="AirfoilLine1" Stroke ="Black"/> 
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
